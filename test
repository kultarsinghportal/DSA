public class SalesforceWrapper
{
    private readonly ForceClient _client;

    public SalesforceWrapper(ForceClient client) => _client = client;

    public async Task<IEnumerable<T>> QueryAsync<T>(string query) =>
        await _client.QueryAsync<T>(query);

    public async Task<string> CreateAsync<T>(T entity, string objectName)
    {
        var result = await _client.CreateRecord(objectName, entity);
        return result.Id;
    }

    public async Task<bool> UpdateAsync<T>(string id, T entity, string objectName) =>
        await _client.UpdateRecord(objectName, id, entity);

    public async Task<bool> DeleteAsync(string id, string objectName) =>
        await _client.DeleteRecord(objectName, id);
}
